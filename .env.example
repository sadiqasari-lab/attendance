# Django
DJANGO_SETTINGS_MODULE=config.settings.development
DJANGO_SECRET_KEY=change-me-to-a-random-secret-key-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,arabinspire.cloud

# Database
POSTGRES_DB=attendance_db
POSTGRES_USER=attendance_user
POSTGRES_PASSWORD=attendance_pass_change_me
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# JWT
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=30
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Biometric Encryption
BIOMETRIC_ENCRYPTION_KEY=change-me-to-a-32-byte-base64-key

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Superadmin
DJANGO_SUPERUSER_EMAIL=admin@arabinspire.cloud
DJANGO_SUPERUSER_PASSWORD=change-me-in-production

# Domain
BASE_DOMAIN=arabinspire.cloud
