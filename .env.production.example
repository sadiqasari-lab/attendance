# ===========================================
# Inspire Attendance System — Production
# ===========================================
# Copy this file to .env and fill in real values.
# NEVER commit the real .env file to version control.

# Django
DJANGO_SETTINGS_MODULE=config.settings.production
DJANGO_SECRET_KEY=<generate-with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())">
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database
POSTGRES_DB=attendance_db
POSTGRES_USER=attendance_user
POSTGRES_PASSWORD=<strong-random-password>
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# JWT — shorter access token for production
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=15
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Biometric Encryption — MUST be a unique 32-byte base64-encoded key
# Generate with: python -c "import base64,os; print(base64.b64encode(os.urandom(32)).decode())"
BIOMETRIC_ENCRYPTION_KEY=<base64-encoded-32-byte-key>

# CORS — your production frontend URL(s)
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# Superadmin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=<strong-random-password>

# Domain
BASE_DOMAIN=yourdomain.com
